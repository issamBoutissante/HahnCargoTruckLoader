<Window
    x:Class="TruckLoaderVisualizer.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Truck Load Visualizer"
    Width="800"
    Height="600">
    <Grid>
        <Viewport3D Name="viewport">
            <Viewport3D.Camera>
                <PerspectiveCamera
                    FieldOfView="45"
                    LookDirection="-10,-10,-10"
                    Position="10,10,10"
                    UpDirection="0,1,0" />
            </Viewport3D.Camera>

            <!--  Lighting  -->
            <ModelVisual3D>
                <ModelVisual3D.Content>
                    <DirectionalLight Direction="-1,-1,-1" Color="White" />
                </ModelVisual3D.Content>
            </ModelVisual3D>

            <!--  Models will be added programmatically  -->
        </Viewport3D>
    </Grid>
</Window>
